{
    "version": "3.3.3",
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": true,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "jsx": "react",
        "lib": [
            "es5",
            "es6",
            "es2015",
            "dom"
        ],
        "baseUrl": "src",
        "paths": {
            "@/*": ["*"]
        },
        "esModuleInterop": true,
        "outDir": "dist"
    },
    "files": ["src/index.ts"],
    "exclude": [
        "node_modules",
        "build"
    ]
}
